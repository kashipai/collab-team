<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>EmployeeRegistrationForm</display-name>
   <filter>
   <filter-name>LoginFilter</filter-name>
   <filter-class>trainingAssignment.LoginAuthenticationFilter</filter-class>
   </filter>

	<filter-mapping>
	   <filter-name>LoginFilter</filter-name>
	   <url-pattern>/DatabaseAccess</url-pattern>
	</filter-mapping>
	
	<servlet>
	    <servlet-name>adminLogin</servlet-name>
	    <jsp-file>/Adminpage.jsp</jsp-file>
	</servlet>
	<!--mapping-->
	<servlet-mapping>
	    <servlet-name>adminLogin</servlet-name>
	    <url-pattern>/DatabaseAccess</url-pattern>   
	</servlet-mapping>
    <servlet>
    <servlet-name>databaseAccess</servlet-name>
    <servlet-class>trainingAssignment.DatabaseAccess</servlet-class>
    </servlet>
    <servlet-mapping>
    <servlet-name>databaseAccess</servlet-name>
    <url-pattern>/register</url-pattern>
    </servlet-mapping>
  
</web-app>